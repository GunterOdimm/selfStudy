package study.java.code;

public class sum {
	public static void main(String[] args) {
		int a = 3;
		int b = 5;
		long answer = 0;
		if (a == b) {
			answer = a;
		} else {
			for (int i = 0; i < 10000000; i++) {
				if (a + i < b) {
					answer += a;
					if (a + i == b) {
						answer += b;
					}
				}
			}
		}
		System.out.println(answer);
	}
}
