package study.java.code;

public class sum {
	public static void main(String[] args) {
		int a = 5;
		int b = 3;
		long answer = 0;
		for (int i = 0; i < 10000000; i++) {
			if (a + i < b) {
				answer += a + i;
				System.out.println(answer);
			} else if (a + i == b) {
				answer += b;
			} else if (a == b) {
				answer = a;
			} else if (a > b + i) {
				answer += b + i;
				System.out.println(answer);
			} else if (a == b + i) {
				answer += b;
			}
		}
		System.out.println(answer);
	}
}
