package study.java.code;

public class kakaoTest01 {
	public static void main(String[] args) {
		int answer = 0;
		String s = "aabbaccc";
		String[] userInputArray;
		String test = "";
		userInputArray = s.split("");
		for (int i = 0; i < userInputArray.length; i++) {
			int count = 0;
			String stri = userInputArray[i];
			for (int j = 1; j <= userInputArray.length; j++) {
				String strj = userInputArray[j];
				if (stri == strj) {
					count++;
					test += userInputArray[i] + count;
				}else {
					j++;
				}
			}
		}
		System.out.println(test);
	}
}
